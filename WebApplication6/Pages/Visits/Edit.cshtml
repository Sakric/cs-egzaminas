@page
@model WebApplication6.Pages.Visits.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Redaguoti vizitą</h1>

<h4>Vizitas</h4>
<hr />
<div class="row">
    <h1 class="text-danger">@ViewData["WRONG"]</h1>

    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Visit.Id" />
            <div class="form-group">
                <label asp-for="Visit.Date" class="control-label"></label>
                <input asp-for="Visit.Date" class="form-control" />
                <span asp-validation-for="Visit.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Visit.UserId" class="control-label"></label>
                <select asp-for="Visit.UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="Visit.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Visit.PetId" class="control-label"></label>
                <select asp-for="Visit.PetId" class="form-control" asp-items="ViewBag.PetId"></select>
                <span asp-validation-for="Visit.PetId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Visit.Price" class="control-label"></label>
                <input asp-for="Visit.Price" class="form-control" />
                <span asp-validation-for="Visit.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="./Index">Atgal į vizitų puslapį</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
