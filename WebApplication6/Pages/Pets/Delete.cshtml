@page
@model WebApplication6.Pages.Pets.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Pet</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Vartotojo ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pet.UserId)
        </dd>
        <dt class="col-sm-2">
            Gyvuno vardas
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pet.PetName)
        </dd>
        <dt class="col-sm-2">
            Gyvuno grupe
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pet.Group)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Pet.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Atgal į gyvunų sąrašą</a>
    </form>
</div>
